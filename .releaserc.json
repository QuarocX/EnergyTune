{
  "branches": ["main"],
  "tagFormat": "v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ Features" },
            { "type": "fix", "section": "ğŸ› Fixes" },
            { "type": "perf", "section": "ğŸš€ Performance" },
            { "type": "refactor", "section": "ğŸ§¹ Refactors" },
            { "type": "docs", "section": "ğŸ“ Documentation" },
            { "type": "style", "section": "ğŸ¨ Styling" },
            { "type": "test", "section": "âœ… Tests" },
            { "type": "build", "section": "ğŸ—ï¸ Build" },
            { "type": "ci", "section": "ğŸ‘· CI" },
            { "type": "chore", "section": "ğŸ”§ Chores" },
            { "type": "revert", "section": "âª Reverts" }
          ]
        },
        "releaseRules": [
          { "type": "refactor", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "ci", "release": "patch" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ Features", "hidden": false },
            { "type": "fix", "section": "ğŸ› Fixes", "hidden": false },
            { "type": "perf", "section": "ğŸš€ Performance", "hidden": false },
            { "type": "refactor", "section": "ğŸ§¹ Refactors", "hidden": false },
            { "type": "docs", "section": "ğŸ“ Documentation", "hidden": false },
            { "type": "style", "section": "ğŸ¨ Styling", "hidden": false },
            { "type": "test", "section": "âœ… Tests", "hidden": false },
            { "type": "build", "section": "ğŸ—ï¸ Build", "hidden": false },
            { "type": "ci", "section": "ğŸ‘· CI", "hidden": false },
            { "type": "chore", "section": "ğŸ”§ Chores", "hidden": false },
            { "type": "revert", "section": "âª Reverts", "hidden": false }
          ]
        }
      }
    ],
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],
    ["@semantic-release/npm", { "npmPublish": false }],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "package-lock.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
